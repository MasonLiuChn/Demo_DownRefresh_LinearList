<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >
	<include
            android:id="@+id/home_progress"
            android:layout_centerInParent="true"
            layout="@layout/progressbar" 
            android:visibility="gone"/>
    <RelativeLayout
            android:id="@+id/home_titlebar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/home_titlebar_bg"
 			>
	</RelativeLayout>
	<RelativeLayout
            android:id="@+id/home_searchRL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_titlebar"
 			>
 			<Button
		        android:id="@+id/home_searchBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/home_searchBtn" 
		        android:layout_alignParentRight="true">
		    </Button>
 			<EditText
		        android:id="@+id/home_searchET"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_toLeftOf="@+id/home_searchBtn"
			 >
		    </EditText>
	</RelativeLayout>
	<com.mentor.firstdemo.view.DownRefreshListView
	    android:id="@+id/home_DownRefreshListView"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_searchRL">
	    
	</com.mentor.firstdemo.view.DownRefreshListView>
</RelativeLayout>